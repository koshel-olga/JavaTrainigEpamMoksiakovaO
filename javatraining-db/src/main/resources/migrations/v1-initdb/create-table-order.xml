<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2021-05-21_create_table_Order" author="olga_moksiakova">
        <createTable tableName="order">
            <column name="order_id" type="int"  autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="order_number" type="varchar(10)"/>
            <column name="customer_id" type="int">
                <constraints foreignKeyName="fk_customer_id" nullable="false"
                             referencedTableName="customer" referencedColumnNames="customer_id"/>
            </column>
            <column name="order_date" type="timestamp"/>
            <column name="total_amount" type="decimal(12,2)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>